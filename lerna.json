{
  "npmClient": "yarn",
  "name": "astrajs",
  "packages": ["packages/*"],
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "**/node_modules/**",
    "**/package.json",
    "**/*.md",
    "**/perf/**"
  ],
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "version": {
      "message": "ci: publish"
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
